<h1 lass="mb-3">Register</h1>

<form method="post" action="/register">
  <div class="form-group">
    <label for="exampleInputEmail1">Email address</label>
    <input type="email" value="{{user.email}}" name="email" class="form-control {{#if errors.email}}is-invalid{{/if}}" placeholder="Enter email">
    {{#if errors.email}}<small class="invalid-feedback">{{errors.email}}</small>{{/if}}
  </div>
  <div class="form-group">
    <label >Username</label>
    <input type="text" value="{{user.username}}"  name="username" class="form-control {{#if errors.username}}is-invalid{{/if}} " placeholder="Username">
     {{#if errors.username}}<small class="invalid-feedback">{{errors.username}}</small>{{/if}}
  </div>
  <div class="form-group">
    <label>Password</label>
    <input type="password" name="password" class="form-control {{#if errors.password}}is-invalid{{/if}}" placeholder="Password">
     {{#if errors.password}}<small class="invalid-feedback">{{errors.password}}</small>{{/if}}
  </div>

  <div>
