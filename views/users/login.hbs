<main class="form-login">

  <form method="POST" action="/login">
    <img class="mb-4" src="/img/logo.png" alt width="122" height="97">
    <h1 class="mb-3 fw-normal">Login</h1>

    <div class="form-floating">
      <label >Email address</label>
      <input name="email" type="email" value="{{user.email}}" class="form-control" placeholder="Enter your email" autofocus>
    </div>


    <div class="form-floating">
      <label>Password</label>
      <input name="password" type="password" class="form-control {{#if errors.password}}is-invalid{{/if}}" placeholder="Password">
      {{#if errors.password}}<small class="invalid-feedback">{{errors.password}}</small>{{/if}}
    </div>

    <button type="submit" class="btn btn-lg btn-primary mt-3">Login</button>

  </form>
</main>